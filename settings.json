{
  "defaultSystemPrompt": "~/.claude/CLAUDE.md",
  "hooks": [
    {
      "matcher": ".*",
      "hooks": [
        {
          "type": "before-start",
          "command": "echo 'ðŸš€ 13-Agent System Active | 5 Orchestrator Commands Ready | TDD + DDRIVE Enabled'"
        },
        {
          "type": "user-prompt-submit",
          "command": "echo 'âš¡ Processing with Orchestrator Coordination | Never Work Directly'"
        }
      ]
    }
  ],
  "env": {
    "CLAUDE_TDD_MODE": "true",
    "CLAUDE_METHODOLOGY": "DDRIVE",
    "CLAUDE_READABLE_CODE": "true",
    "CLAUDE_ORCHESTRATOR_ONLY": "true",
    "CLAUDE_AGENTS_COUNT": "13",
    "CLAUDE_COMMANDS_COUNT": "5"
  },
  "aliases": {
    "doc": "document",
    "dec": "decompose",
    "imp": "implement",
    "ref": "refactor",
    "val": "validate"
  },
  "orchestrators": {
    "document": "feature-documenter",
    "decompose": "task-decomposer",
    "implement": "incremental-implementer",
    "refactor": "code-refactorer",
    "validate": "project-validator"
  },
  "agents": {
    "orchestrators": [
      "feature-documenter",
      "task-decomposer",
      "incremental-implementer",
      "code-refactorer",
      "project-validator"
    ],
    "workers": [
      "requirement-analyzer",
      "architecture-guardian",
      "project-manager",
      "dependency-resolver",
      "code-implementer",
      "test-manager",
      "code-validator",
      "documentation-writer"
    ]
  },
  "workflow": {
    "mandatory_sequence": ["document", "decompose", "implement"],
    "optional_phases": ["refactor", "validate"],
    "tdd_enforcement": true,
    "documentation_first": true,
    "orchestrator_only": true
  }
}

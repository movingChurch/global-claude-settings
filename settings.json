{
  "defaultSystemPrompt": "~/.claude/CLAUDE.md",
  "hooks": [
    {
      "matcher": ".*",
      "hooks": [
        {
          "type": "before-start",
          "command": "echo 'ðŸš€ DDRIVE Methodology Active | TDD + Readable Code Enabled'"
        },
        {
          "type": "user-prompt-submit",
          "command": "echo 'âš¡ Processing with DDRIVE Phase Tracking...'"
        }
      ]
    }
  ],
  "env": {
    "CLAUDE_TDD_MODE": "true",
    "CLAUDE_METHODOLOGY": "DDRIVE",
    "CLAUDE_READABLE_CODE": "true"
  },
  "aliases": {
    "t": "task",
    "s": "sprint",
    "p": "progress",
    "m": "milestone",
    "c": "coverage",
    "r": "refactor",
    "d": "docs",
    "v": "validate"
  }
}
